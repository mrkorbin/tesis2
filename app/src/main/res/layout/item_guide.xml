<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logoapp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category"
        android:layout_toEndOf="@+id/imageViewItemGuia"
        android:layout_toRightOf="@+id/imageViewItemGuia"
        android:text="Descripcion"
        android:layout_gravity="fill_vertical|center_horizontal" />

    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageViewItemGuia"
        android:layout_toRightOf="@+id/imageViewItemGuia"
        android:text="Titulo de la Guia"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#f65034"
        android:textSize="21sp"
        android:layout_gravity="fill_vertical|center_horizontal" />

    <ImageView
        android:id="@+id/imageViewItemGuia"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignBottom="@+id/texto"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:maxHeight="35dp"
        android:maxWidth="74dp"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="fill_vertical|center_horizontal" />


</LinearLayout>